<project name="five-server" default="dist" basedir=".">
	<description>
		Server component for the Five media system.
	</description>

	<!-- set global properties for this build -->
	<property name="src" location="src/main/java"/>
	<property name="build" location="build"/>
	<property name="dist" location="dist"/>
	<property name="gen" location="gen"/>
	<property name="libs" location="libs"/>
	<property name="data" location="data"/>

	<property name="protoc" value="protoc"/>

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp/>
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}"/>
		<mkdir dir="${gen}"/>
	</target>

	<target name="build-props" depends="init">
		<mkdir dir="${gen}/org/devtcg/five" />
		<echo file="${gen}/org/devtcg/five/version.prop" append="false">${DSTAMP}</echo>
	</target>

	<target name="protoc" depends="init">
		<echo>Compiling protobufs into Java classes...</echo>
		<apply executable="${protoc}" failonerror="true">
			<arg value="--java_out=${gen}" />
			<arg value="-I${data}" />
			<fileset dir="${data}">
				<include name="**/*.proto" />
			</fileset>
		</apply>
	</target>

	<target name="compile" depends="init, build-props, protoc" description="compile the source">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}:${gen}" destdir="${build}">
			<classpath>
				<fileset dir="${libs}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>

		<!-- Copy any generated build properties (such as version.prop). -->
		<copy todir="${build}" flatten="false">
			<fileset dir="${gen}">
				<include name="**/*.prop" />
			</fileset>
		</copy>
	</target>

	<target name="dist" depends="compile" description="generate the distribution" >
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}/lib"/>

		<!-- Unpack the dependent jars into the build path to make a single jar
		     file. XXX: Maybe use OneJar for this? -->
		<unzip dest="${build}">
			<patternset>
				<include name="**/*.class" />
				<include name="**/*.properties" />
			</patternset>
			<fileset dir="${libs}">
				<include name="**/*.jar" />
			</fileset>
		</unzip>

		<jar jarfile="${dist}/lib/five-server-${DSTAMP}.jar" basedir="${build}">
			<manifest>
				<attribute name="Main-Class" value="org.devtcg.five.Main" />
				<attribute name="Built-Date" value="${TODAY}" />
				<attribute name="Built-By" value="${user.name}" />
			</manifest>
		</jar>
	</target>

	<target name="clean" description="clean up" >
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}"/>
		<delete dir="${dist}"/>
		<delete dir="${gen}" />
	</target>
</project>
